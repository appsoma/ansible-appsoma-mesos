<LoadPlugin "python">
    Globals true
</LoadPlugin>

<Plugin "python">
    ModulePath "/usr/share/collectd/plugins/"

    Import "mesos-slave"

    <Module "mesos-slave">
        Instance "int"
        Host "{{ hostvars[inventory_hostname]['ec2_private_ip_address'] }}"
        Port 5051
        Verbose false
        Version "{{ mesos_version }}"
    </Module>
    <Module "mesos-slave">
        Instance "qa"
        Host "{{ hostvars[inventory_hostname]['ec2_private_ip_address'] }}"
        Port 5052
        Verbose false
        Version "{{ mesos_version }}"
    </Module>
</Plugin>