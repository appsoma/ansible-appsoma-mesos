{
  "handlers": {
    "default": {
      "type": "pipe",
      "command": "cat"
    }
  },
  "checks": {
    "mesos": {
        "command": "/usr/local/bin/check-mesos.rb -s 10.10.0.227 -m master",
        "interval": 10,
        "subscribers": [
            "{{ cluster_name }}_masters"
        ]
    },
    "marathon": {
        "command": "/usr/local/bin/check-marathon.rb -s 10.10.0.227",
        "interval": 10,
        "subscribers": [
            "{{ cluster_name }}_masters"
        ]
    },
    "mesos_metrics": {
        "type": "metric",
        "command": "/usr/local/bin/metrics-mesos.rb -h 10.10.0.227 -m master",
        "subscribers": [
            "{{ cluster_name }}_masters"
        ],
        "interval": 10
    },
    "marathon_metrics": {
        "type": "metric",
        "command": "/usr/local/bin/metrics-marathon.rb -h 10.10.0.227",
        "subscribers": [
            "{{ cluster_name }}_masters"
        ],
        "interval": 10
    }
  }
}