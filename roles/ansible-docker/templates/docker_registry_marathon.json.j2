{
	"id": "/docker-registry",
	"container": {
		"type": "DOCKER",
		"docker": {
			"network": "BRIDGE",
			"image": "registry:2",
			"portMappings": [
				{
                    "containerPort": 5000,
                	"hostPort": 0,
                	"servicePort": 5000,
                	"protocol": "tcp"
      			}
			]
		},
		"volumes": [
			{
				"containerPath": "/etc/docker/registry/config.yml",
				"hostPath": "{{ docker_registry_dir }}/docker_registry_config.yml",
				"mode": "RO"
			}
		]
	},
	"cpus": 0.1,
	"mem": 256,
	"instances": 1
}
