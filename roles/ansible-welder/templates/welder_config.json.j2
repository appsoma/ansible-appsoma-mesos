        "mongodb": {
            "host": "localhost",
            "port": {{ db_port | int }},
            "database": "welder"
        },
        "scheduler": "{{ scheduler }}",
{% if scheduler == "rhino" %}
        "rhino": {
            "url": "http://{{ scheduler_ip }}:8899/"
        },
